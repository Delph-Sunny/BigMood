{{!-- Nav Bar --}}
<nav>
    <div class="nav-wrapper">
        <a href="#" class="brand-logo center">BigMood</a>
        <a href="#" class="sidenav-trigger show-on-large" data-target="slide-out"><i class="material-icons">menu</i></a>
    </div>
</nav>

{{!-- Side Nav Bar --}}
<ul id="slide-out" class="sidenav">
    {{!-- User Info Section --}}
    <li>
        <div class="user-view">
            <div class="background">
                <img src="">
            </div>
            <a href="#user"><i class="material-icons">account_circle</i></a>
            <a href="#name"><span class="white-text name"></span></a>
            <a href="#email"><span class="white-text email"></span></a>
        </div>
    </li>
    <li>
        <div class="divider"></div>
    </li>
    {{!-- Theme Selection Section --}}
    <li><a class="subheader">Theme</a></li>
</ul>

{{!-- Dashboard Content --}}
<div class="container" id="dashContent">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card center">
                <div class="card-content">
                    <h3>Dashboard Statistics</h3>
                    <p>{INSERT GRAPH HERE}</p>
                </div>
                <div class="card-tabs">
                    <ul class="tabs tabs-fixed-width">
                        <li class="tab"><a href="#mood">Average Mood</a></li>
                        <li class="tab"><a class="active" href="#activity">Most Used Activity</a></li>
                        <li class="tab"><a href="#quote">Latest Quote</a></li>
                    </ul>
                </div>
                <div class="card-content grey lighten-4">
                    <div id="mood">
                        <h4>Average Mood</h4>
                    </div>
                    <div id="activity">
                        <h4>Most Used Activity</h4>
                    </div>
                    <div id="quote">
                        <p id="new-quote">{{quote}}</p>
                        <p id="author">{{author}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">All Entries</span>
                    <div class="input-field col s6">
                        <label>Sort By:</label>
                        <select>
                            <option value="">Choose your option</option>
                            <option value="1">Date</option>
                            <option value="2">Mood</option>
                            <option value="3">Activity</option>
                        </select>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m12 l12">
            <ul class="collapsible">
                {{#each Entries}}
                <li>
                    <div class="collapsible-header"><i class="material-icons">{{mood.icon}}</i>{{mood}}</div>
                    <div class="collapsible-body"><span>Activities:
                            {{#each activities}}
                            <div class="chip">
                                <i class="material-icons">{{activity.icon}}</i>{{activity}}
                            </div>
                            {{/each}}
                        </span>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

{{!-- Modal New Mood Entry --}}
<button class="btn indigo hoverable modal-trigger" data-target="newEntry" id="modalButton"><i
        class="material-icons">add</i></button>

<div class="modal" id="newEntry">
    <div class="modal-content">
        <h3>How are you feeling?</h3>
        <div class="divider"></div>
        <h3>What are you doing?</h3>
        <div class="divider"></div>
        <div class="modal-footer">
            <h2>Preview</h2>
            <button class="btn green">Submit</button>
            <button class="btn red modal-close">Cancel</button>
        </div>

    </div>
</div>

